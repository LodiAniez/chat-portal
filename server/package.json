{
	"name": "server",
	"version": "1.0.0",
	"description": "Chat portal server",
	"main": "dist/main.js",
	"scripts": {
		"build": "tsc",
		"start:dev:main": "npx nodemon ./src/main.ts",
		"start:dev:chat": "npx nodemon ./src/chat-server.ts",
		"start:dev:auth": "npx nodemon ./src/auth-server.ts",
		"start-servers:dev": "cross-env NODE_ENV=development concurrently \"npm run start:dev:auth\" \"npm run start:dev:main\" \"npm run start:dev:chat\""
	},
	"author": "Dexter Louie Aniez",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.0.1",
		"concurrently": "^7.2.2",
		"cors": "^2.8.5",
		"express": "^4.18.1",
		"jsonwebtoken": "^8.5.1",
		"mysql": "^2.18.1",
		"socket.io": "^4.5.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/node": "^18.0.3",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"eslint": "^8.19.0",
		"nodemon": "^2.0.19",
		"ts-node": "^10.8.2",
		"typescript": "^4.7.4"
	}
}